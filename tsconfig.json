    "module": "commonjs",                               
    "rootDir": "./src",                               
    "declaration": true,                              
    "outDir": "./lib",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
